<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="752" Width="800">
    <Grid>
        <Label Content="Someones name :" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="NameText" HorizontalAlignment="Left" Height="20" Margin="15,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760" TextChanged="TextBox_TextChanged"/>
        <Button Content="Add someone" HorizontalAlignment="Left" Height="25" Margin="15,70,0,0" VerticalAlignment="Top" Width="760" Click="Button_Click"/>
        <ListView x:Name="AffichageInfecte" HorizontalAlignment="Left" Height="600" Margin="15,100,0,0" VerticalAlignment="Top" Width="760">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="400"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
